<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/main_view_top_margin">

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_fragment_height"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/experienceButton"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/buttons_elevation"
                android:padding="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/maps" />

            <ImageButton
                android:id="@+id/achievementButton"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/rajah"
                android:elevation="@dimen/buttons_elevation"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/medal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/logOutButton"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/rajah"
                android:elevation="@dimen/buttons_elevation"
                android:padding="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/common_full_open_on_phone" />

            <ImageButton
                android:id="@+id/userButton"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/buttons_elevation"
                android:padding="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/user" />
        </LinearLayout>

</LinearLayout>