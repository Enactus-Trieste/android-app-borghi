<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/completed_exp_linear_layout"
    android:layout_marginTop="20dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/completed_exp_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp" >

        <LinearLayout
            android:id="@+id/completed_exp_inner_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/completed_exp_image"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/medal" />

            <TextView
                android:id="@+id/completed_exp_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingEnd="@dimen/completed_exp_end_padding_inner_card"
                android:text=""
                android:textSize="@dimen/completed_exp_title_text_size" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/completed_exp_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-10dp"
        android:layout_gravity="end"
        android:text=""
        android:textSize="@dimen/completed_exp_date_text_size" />

</LinearLayout>